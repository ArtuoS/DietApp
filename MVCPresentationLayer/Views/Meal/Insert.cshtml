                $.ajax({
                    method: "POST",
                    url: "/FoodCategory/Insert/",
                    data: JSON.stringify(category),
                    contentType: "application/json",
                    dataType: "json",
                    traditional: true,
                    success: function (response) {
                        if (response.DeuBoa) {
