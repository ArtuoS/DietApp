@model MVCPresentationLayer.Models.UpdateModels.UserUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>All form elements <small>With custom checbox and radion elements.</small></h5>
            </div>
            <div class="ibox-content">
                <form asp-action="Update">
                    <div class="form-group  row">
                        <label asp-for="First_Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="First_Name" type="text" class="form-control">
                            <span asp-validation-for="First_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Last_Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Last_Name" type="text" class="form-control">
                            <span asp-validation-for="Last_Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Email" type="email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Password" type="password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Date_Of_Birthday" class="font-normal"></label>
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input asp-for="Date_Of_Birthday" type="text" class="form-control">
                            <span asp-validation-for="Date_Of_Birthday" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Weigth" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Heigth" class="touchspin2" type="text" value="">
                            <span asp-validation-for="Weigth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Heigth" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Weigth" class="touchspin2" type="text" value="">
                            <span asp-validation-for="Heigth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label asp-for="Body-Fat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Body-Fat"type="text" value="">
                            <span asp-validation-for="Body-Fat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        @{
                            string[] biological_gender = Enum.GetNames(typeof(Entities.Enums.Biological_Gender));
                        }

                        <select class="form-control" name="Biological_Gender" id="Biological_Gender">
                            <option value="2">Selecione o gênero</option>
                            @for (int i = 0; i < biological_gender.Length; i++)
                            {
                                <option value="@i">@biological_gender[i]</option>
                            }
                        </select>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
